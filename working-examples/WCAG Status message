<!DOCTYPE html>
<html>

<head>
  <title>Online Banking Transaction</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container" id="container">
    <header>
      <section class="window--buttons">
        <div class="window__close"></div>
        <div class="window__minimize"></div>
        <div class="window__maximize"></div>
      </section>
    </header>
<br>
    <div class="card__description">
      <div class="card__container">
        <h2 class="mb-3">Transfer Funds</h2>
        <form>
          <div class="form-group">
            <label for="amount">Amount to transfer:</label>
            <input type="number" min="0" class="form-control" id="amount" placeholder="Enter Amount">
          </div>
          <button type="submit" class="btn btn-primary" onclick="validateTransfer(event)">Transfer</button>
          <div id="status-message" role="status" class="mt-3" style="display: none;"></div>
          <div id="error-message" class="alert alert-danger mt-3" role="alert" aria-live="assertive" style="display: none;"></div>
        </form>
      </div>
    </div>
  </div>

  <script>
    var balance = 500;

    function validateTransfer(event) {
      event.preventDefault();
      var amount = document.getElementById('amount').value;
      var errorMessage = document.getElementById('error-message');
      var statusMessage = document.getElementById('status-message');

      if (amount > balance) {
        errorMessage.textContent = "Error: Insufficient funds. Please enter a lower amount.";
        errorMessage.style.display = 'block';
      } else {
        errorMessage.style.display = 'none';
        statusMessage.textContent = "Transfer is in progress...";
        statusMessage.style.display = 'block';
        setTimeout(function() {
          statusMessage.textContent = "Transfer completed successfully.";
        }, 4000);
      }
    }
  </script>
</body>

</html>
